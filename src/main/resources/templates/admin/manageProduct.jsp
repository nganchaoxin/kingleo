<body>
<main>
<a href="newProduct"><button>Add newProduct</button></a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody >
    <tr th:each="item : ${productList}">
      <th scope="row" th:text="${item.id}"></th>
      <td th:text="${item.product_name}" ></td>
      <td th:text="${item.price}"></td>
      <td>
        <a type="button" th:href="'deleteProduct/id=' + ${item.id}">Delete</a>
        <button>Update</button>
      </td>
    </tr>
  </tbody>
</table>
    </main>
